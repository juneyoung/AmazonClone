<% layout('layout') -%>

<!-- Do not know why did not put this on layout.ejs -->
<div class='container'>

	<div class='row'>
		<div class='col-sm-6 col-md-4'>
			<img class='img-circle img-responsive img-center' src="<%= user.profile.picture %>">
			<br>
			<p>Name : <%= user.profile.name %></p>
			<p>Email : <%= user.email %></p>


			<% if(user.address === '' || typeof user.address === 'undefined') { %>
				<p>
					<span style='color:#c0392b; font-weight : bold;'>
						You have no address
					</span>
				</p>
			<% } else { %>
				<p>Address : <%= user.address %></p>
			<% } %>

			<a href='edit-profile' class='btn btn-primary btn-lg'>Edit Profile</a>
			
		</div>
	</div>

</div>